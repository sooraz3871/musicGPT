{
  "compilerOptions": {
    "target": "es6", // Compile to ES2020
    "module": "commonjs", // Use CommonJS dule system
    "lib": ["DOM", "ES2015", "esnext"], // Include DOM and ES2015 library files
    "baseUrl": ".", // Base directory for resolving non-relative module names
    "outDir": "./dist", // Output directory for compiled JavaScript files
    "rootDir": "./src", // Root directory of TypeScript source files
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Raise an error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": false, // Report errors on unused function parameters
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "esModuleInterop": true, // Enable compatibility with CommonJS and ES modules
    "sourceMap": true, // Generate source maps for debugging
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Emit metadata for decorators (needed for some frameworks)
    "forceConsistentCasingInFileNames": true, // Ensure file names are consistent in casing
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "pretty": true, // Enable pretty-printing of output
    "resolveJsonModule": true, // Allow importing JSON files
    "paths": {
      "@src/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@services/*": ["./src/services/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@config/*": ["./src/config/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@entities/*": ["./src/entities/*"],
      "@routes/*": ["./src/routes/*"]
    }
  },
    "include": ["src/**/*"]
  }

